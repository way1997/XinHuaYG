.pro(r){
    position: relative;
}
.pro(a){
    position: absolute;
}
.pro(f){
    position:fixed;
}
.text-ellipsis(){
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.border-1px(@c:#dedede,@f:top) when(@f = top) {
    position: relative;
    //border:none;
    &:after{
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        background: @c;
        width: 100%;
        border-bottom: 1px solid #ccc;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}
.border-1px(@c:#dedede,@f:top) when(@f = bottom) {
    position: relative;
    //border:none;
    &:before{
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        background: @c;
        width: 100%;
        border-bottom: 1px solid #ccc;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}
.border-1px(@c:#dedede,@f:top) when(@f = right) {
    position: relative;
    //border:none;
    &:before{
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        background: @c;
        height: 200%;
        border-right: 1px solid #ccc;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
        -webkit-box-sizing: border-box;
          box-sizing: border-box;
    }
}
